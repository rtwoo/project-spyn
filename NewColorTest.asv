colorPort = 3;
drivePorts = 'DA';
armPort = 'C';
driveSpeed = 15;
brick.SetColorMode(colorPort, 2);

nav = true;
actingOn;

while nav
	
	color = brick.ColorCode(colorPort);
	
	if ~(actingOn == color)
	switch(color)
		case 4
	
				% yellow
				% start driving
			end
		case 5
			% red
			% stop 4 seconds
		case 3
			% green
			% raise arm
		case 2
			% blue
			% lower arm
		case 1
			% black
	end
	actingOn = color;

end